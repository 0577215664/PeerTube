    "clean:client:tsc": "scripty",
    "clean:server:test": "scripty",
    "watch:client": "SCRIPTY_PARALLEL=true scripty",
    "watch:client:sass": "scripty",
    "watch:client:tsc": "scripty",
    "danger:clean:server": "scripty",
    "danger:clean:modules": "scripty",
