    "morgan": "^1.5.3",
    "multer": "^1.1.0",
    "node-ipc": "^7.0.0",
    "openssl-wrapper": "^0.2.3",
    "password-generator": "^2.0.2",
    "request": "^2.57.0",
    "request-replay": "^1.0.2",
    "segfault-handler": "^1.0.0",
    "ursa": "^0.9.1",
    "validator": "^5.0.0",
    "webtorrent": "^0.89.0",
    "winston": "^2.1.1",
    "ws": "^1.0.1"
