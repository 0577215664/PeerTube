    "node-sass": "^3.4.2",
    "scripty": "^1.5.0",
    "standard": "^7.0.1",
    "supertest": "^1.1.0"
  },
  "standard": {
    "ignore": [
      "client/"
    ],
    "globals": [
      "alert",
      "confirm",
      "it",
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "include"
    ]
  }
